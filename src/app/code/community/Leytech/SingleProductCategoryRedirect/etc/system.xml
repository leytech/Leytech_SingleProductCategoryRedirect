<?xml version="1.0"?>
<config>
	<sections>
		<leytech_singleproductcategoryredirect translate="label">
			<label>Single Product Category Redirect</label>
			<tab>leytech</tab>
			<frontend_type>text</frontend_type>
			<sort_order>650</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<about translate="label">
					<label>About</label>
					<sort_order>10</sort_order>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<comment>
						<![CDATA[
						<h3>Leytech_SingleProductCategoryRedirect Extension</h3>
						<p>This extension redirects categories that contain only a single product to the product detail page.</p>
						]]>
					</comment>
				</about>
				<settings translate="label">
					<label>Module Configuration</label>
					<sort_order>20</sort_order>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<enable_ext translate="label comment">
							<label>Enable extension</label>
							<comment>If this is set to Yes then categories containing only a single product will be redirected.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_ext>
					</fields>
				</settings>
			</groups>
		</leytech_singleproductcategoryredirect>
	</sections>
</config>